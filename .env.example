# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Application Environment
VITE_APP_ENV=development

# Application URL (for redirects and callbacks)
VITE_APP_URL=http://localhost:8000

# Application Name
VITE_APP_NAME=SPBE DevOps Academy

# Application Version
VITE_APP_VERSION=1.0.0

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================

# Enable Google OAuth (true/false)
VITE_ENABLE_GOOGLE_OAUTH=true

# Enable Demo Account (true/false) - Set to false in production
VITE_ENABLE_DEMO_ACCOUNT=true

# Session Timeout in minutes
VITE_SESSION_TIMEOUT_MINUTES=1440

# Password Requirements
VITE_PASSWORD_MIN_LENGTH=6

# ========================================
# FEATURE FLAGS
# ========================================

# Enable Certificate Generation (true/false)
VITE_ENABLE_CERTIFICATES=true

# Enable Progress Tracking (true/false)
VITE_ENABLE_PROGRESS_TRACKING=true

# Enable Activity Logging (true/false)
VITE_ENABLE_ACTIVITY_LOGGING=true

# Enable Video Content (true/false)
VITE_ENABLE_VIDEO_CONTENT=false

# ========================================
# STORAGE CONFIGURATION
# ========================================

# Supabase Storage URL (if different from main URL)
VITE_STORAGE_URL=https://drilnozmqsrfcshrdyuf.storage.supabase.co/storage/v1/s3

# Certificate Storage Bucket
VITE_CERTIFICATES_BUCKET=certificates

# Avatar Storage Bucket
VITE_AVATARS_BUCKET=avatars

# ========================================
# ANALYTICS CONFIGURATION (Optional)
# ========================================

# Google Analytics ID (optional)
VITE_GA_ID=

# Plausible Analytics URL (optional)
VITE_PLAUSIBLE_URL=

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================

# Enable Debug Mode (true/false)
VITE_DEBUG_MODE=true

# Enable Mock Data (true/false) - For development only
VITE_ENABLE_MOCK_DATA=false

# API Timeout in milliseconds
VITE_API_TIMEOUT=10000

# ========================================
# PRODUCTION OVERRIDES
# ========================================

# For production deployment, override these values:

# VITE_APP_ENV=production
# VITE_APP_URL=https://your-domain.com
# VITE_ENABLE_DEMO_ACCOUNT=false
# VITE_DEBUG_MODE=false
# VITE_ENABLE_MOCK_DATA=false

# ========================================
# SECURITY NOTES
# ========================================

# 1. Never commit .env files to version control
# 2. Use different keys for development and production
# 3. Rotate keys regularly for security
# 4. Keep service role key secret and server-side only
# 5. Use HTTPS in production
# 6. Implement proper CORS configuration

# ========================================
# DEPLOYMENT INSTRUCTIONS
# ========================================

# For Vercel Deployment:
# 1. Go to Vercel dashboard > Project > Settings > Environment Variables
# 2. Add all VITE_ prefixed variables
# 3. Redeploy the project

# For Other Platforms:
# 1. Add environment variables to your hosting platform
# 2. Ensure build process has access to these variables
# 3. Restart/redeploy as needed

